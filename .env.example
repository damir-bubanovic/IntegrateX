# Environment: dev | staging | prod
DJANGO_ENV=dev

# Django
DJANGO_SECRET_KEY=dev-insecure-change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Locale
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# CORS
CORS_ALLOW_ALL_ORIGINS=1
# For staging/prod, prefer setting:
# CORS_ALLOW_ALL_ORIGINS=0
# CORS_ALLOWED_ORIGINS=https://your-frontend.example

# Database (default: sqlite in project root)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# Example Postgres settings:
# DB_ENGINE=django.db.backends.postgresql
# DB_DATABASE=integratex
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_HOST=127.0.0.1
# DB_PORT=5432

# Celery / Redis
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0
CELERY_TASK_ALWAYS_EAGER=0

# Email (dev)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=no-reply@integratex.local

# Production security toggles (only applied when DJANGO_ENV=prod)
SECURE_SSL_REDIRECT=1
SESSION_COOKIE_SECURE=1
CSRF_COOKIE_SECURE=1
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=1
SECURE_HSTS_PRELOAD=1

USE_WHITENOISE=1
